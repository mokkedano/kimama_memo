<h2>グループ一覧</h2>

<table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>グループ名</th>
        <th>紹介文</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>
            <%= link_to group_path(group) do %>
              <%= image_tag group.get_group_image(100,100) %>
    		    <% end %>
    		  </td>
          <td><%= link_to group.name, group_path(group) %></td>
          <td><%= group.introduction %></td>
          <td><%= group.end_users.count %></td>
          <td>
            <% if admin_signed_in? %>
              <%= link_to "編集", edit_admin_group_path(group), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
