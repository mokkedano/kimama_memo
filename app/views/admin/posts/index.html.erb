<h2>会員投稿メモ一覧</h2>


<table class="table">
	<thead>
		<th>画像</th>
		<th>タイトル</th>
		<th>本文</th>
		<th></th>
		<th></th>
		<th>登録日時</th>
		<th></th>
	</thead>

	<tbody>
	  <% @posts.each do |post| %>
	    <tr>
				<td>
			    <%= link_to admin_post_path(post) do %>
            <%= image_tag post.get_image(100,100) %>
    		  <% end %>
        </td>
        <td>
          <%= link_to admin_post_path(post) do %>
    	      <%= post.title %>
    		  <% end %>
        </td>
        <td><%= post.introduction %></td>
				<td>♥<%= post.favorites.count %></td>
				<!--コメント数 -->
				<td><%= link_to "#{post.comments.count} コメント", admin_post_path(post) %></td>
       	<td><%= post.created_at.strftime("%Y/%m/%d %T") %></td>
			</tr>
		<% end %>
	</tbody>
</table>

