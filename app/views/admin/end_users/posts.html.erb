<div class="container">


  <div class="row mt-md-5">
    <div class="col-md-12" style="text-align:center;">
			<h2 style="text-align:left;"><%= @end_user.nickname %>さんの投稿メモ一覧</h2>

			<table class="table">
				<thead>
					<th>画像</th>
					<th>タイトル</th>
					<th>本文</th>
					<th></th>
					<th></th>
					<th>登録日時</th>
					<th></th>
				</thead>

				<tbody>
				  <% @posts.each do |post| %>
				    <tr>
							<td>
						    <%= link_to admin_post_path(post) do %>
			            <%= image_tag post.get_image(100,100) %>
			    		  <% end %>
			        </td>
			        <td>
			          <%= link_to admin_post_path(post) do %>
			    	      <%= post.title.truncate(12) %>
			    		  <% end %>
			        </td>
			        <td><%= post.introduction.truncate(24) %></td>
							<td>♥<%= post.favorites.count %></td>
							<td>
								<%= link_to admin_post_path(post) do %>
									<i class="far fa-comment"></i>&nbsp;<%= post.comments.count %>
								<% end %>
							</td>
			       	<td><%= post.created_at.strftime("%Y/%m/%d %T") %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>


	<div class="row" style="text-align:center;">
    <div class="col-md-5"></div>
    <div class="col-md-4 mb-md-4">
        <%= paginate @posts %>
    </div>
    <div class="col-md-3"></div>
  </div>


</div>
