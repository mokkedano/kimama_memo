<div class="container">
  <div class="row mt-md-5">
    <div class="col-md-12">
    	<h2>会員一覧</h2>

			<table class="table">
				<thead>
					<th>会員ID</th>
					<th>画像</th>
					<th>ニックネーム</th>
					<th>メールアドレス</th>
					<th>会員ステータス</th>
				</thead>

				<tbody>
					<% @end_users.each do |end_user| %>
						<tr>
							<td><%= end_user.id %></td>
							<td>
							  <%= link_to admin_end_user_path(end_user) do %>
			            <%= image_tag end_user.get_profile_image(50,50) %>
			          <% end %>
			        </td>
			        <td>
							  <%= link_to admin_end_user_path(end_user) do %>
			            <%= end_user.nickname %>
			          <% end %>
			        </td>
							<td><%= end_user.email %></td>
							<td>
								<% if end_user.is_deleted? %>
									<span class="text-invalid">退会済み</span>
								<% else %>
									<span class="text-active">有効</span>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>
