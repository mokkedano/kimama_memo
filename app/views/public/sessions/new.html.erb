<div class="container">
  <div class="row mt-md-5">


    <div class="col-md-3"></div>


    <div class="col-md-6">
      <div class="card w-75 mx-auto shadow-lg mt-md-4">
        <div class="card-body" id="card_form">
          <h2>ログイン</h2>

          <%= form_with model: @end_user, url: end_user_session_path do |f| %>
            <div class="field mt-md-3">
              <%= f.label :email, "メールアドレス", class: "form" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :password, "パスワード", class: "form" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "form" %>
              </div>
            <% end %>

            <div class="actions" style="text-align:center;">
              <%= f.submit "ログイン", class: "btn btn-info form" %>
            </div>
          <% end %>

          <%= render "public/shared/links" %>

        </div>
      </div>
    </div>


    <div class="col-md-3"></div>


  </div>
</div>
