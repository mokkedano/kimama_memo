<div class='col-md-8 offset-md-1'>
  <div><%=link_to "グループを作成する", new_group_path %></div>


<h2>参加しているグループ一覧</h2>

<% if @group_joining == [] %>
  <%= @groups_none %>
<% else %>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>グループ名</th>
        <th>紹介文</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <%# if group.end_user_ids.include?(current_end_user.id) %>
        <tr>
          <td>
            <%= link_to group_path(group) do %>
              <%= image_tag group.get_group_image(100,100) %>
    		    <% end %>
    		  </td>
          <td><%= link_to group.name, group_path(group) %></td>
          <td><%= group.introduction %></td>
          <td><%= group.end_users.count %></td>
          <td>
            <% if group.owner_id == current_end_user.id %>
              <%= link_to "編集", edit_group_path(group), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
        <%# end %>
      <% end %>
    </tbody>
  </table>
<% end %>
</div>