<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー数</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td>
          <%= link_to group_path(group) do %>
            <%= image_tag group.get_group_image(80,80) %>
  		    <% end %>
  		  </td>
        <td valign="middle"><%= link_to group.name, group_path(group) %></td>
        <td valign="middle"><%= group.introduction %></td>
        <td valign="middle"><%= group.end_users.count %>名</td>
        <td colspan="2">
          <% if group.owner_id == current_end_user.id || admin_signed_in? %>
            <%= link_to edit_group_path(group), class: "btn-flat-simple" do %>
              <i class="fa fa-caret-right"></i>&nbsp;編集
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
