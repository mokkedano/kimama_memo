<div class="container">
  <div class="row mt-md-5">


    <div class="col-md-3"></div>


    <div class="col-md-6">
      <div class="card w-75 mx-auto shadow-lg mt-md-4">
        <div class="card-body" id="card_form">
          <h2>新規会員登録</h2>

          <%= form_with model: @end_user, url: end_user_registration_path do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>

            <div class="field mt-md-3">
              <%= f.label :nickname, "ニックネーム", class: "form" %><br />
              <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :email, "メールアドレス", class: "form" %><br />
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :password, "パスワード", class: "form" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "パスワード 確認", class: "form" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="actions mt-md-3" style="text-align:center;">
              <%= f.submit "新規登録", class: "btn btn-info form" %>
            </div>
          <% end %>

          <%= render "public/shared/links" %>

        </div>
      </div>
    </div>


    <div class="col-md-3"></div>


  </div>
</div>
