<h5><%= @category.name %>のメモたち</h5>



<% if @posts.exists? %>

  <div class= "card">
    <div class= "card-body">


    <% @posts.each do |post| %>

        <%= link_to post_path(post) do %>
          <%= image_tag post.get_image(100,100) %>
    			<p><%= post.title %></p>
    		<% end %>

  		  <p><%= post.introduction.truncate(25) %></p>


        <!--投稿一覧画面で投稿に紐づくタグを表示-->
        <i class="fas fa-tag"><%= post.categories.map(&:name).join(', ') %></i>


  		  <!--いいね機能-->
		    <div id="favorite_buttons_<%= post.id %>">
  		    <%= render "public/favorites/favorite", post: post %>
		    </div>
		    <!--いいね機能 ここまで-->

  		  <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  	<% end %>

<% else %>
	<h3>メモが 0 枚です。</h3>
<% end %>

</div>
</div>






