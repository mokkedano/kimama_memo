<h2>メモの中身</h2>
<%= image_tag @post.get_image(100,100) %>
<%= @post.title %>
<%= @post.introduction %>

<% @post.categories.each do |category| %>
  <span><%= category.name %></span>
<% end %>

<!--ステータスも表示させたい-->


<!--いいね機能-->
<div id="favorite_buttons_<%= @post.id %>">
　<%= render "public/favorites/favorite", post: @post %>
</div>

<!--いいね機能 ここまで-->


<!--コメント機能-->
<div>
  <p>コメント件数：<%= @post.comments.count %></p>

  <% @post.comments.each do |comment| %>
    <p><%= image_tag comment.end_user.get_profile_image(100,100) %></p>
    <%= comment.end_user.nickname %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.end_user == current_end_user %>
      <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@post, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに入力してください" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
<!--コメント機能 ここまで-->


<%= link_to "メモを編集する", edit_post_path(@post), class: "btn btn-success" %>
<%= link_to "メモを削除する", post_path(@post), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
