<div class="container">
  <div class="mypage">
    <h4>マイページ</h4>
  </div>
  <div class="row mt-md-5">


    <div class="col-md-3">
      <%= render "sidebar", end_user: @end_user %>
    </div>



    <div class="col-md-6 offset-md-1">
      <div id="category_box">
        <h6 style="font-size:15px;" class="mb-md-4"><i class="fas fa-tags"></i>&nbsp;最近メモをしたためたカテゴリ</h6>&emsp;
        <% if @categories.present? %>
          <% last_category = nil %>
          <% @categories.each do |category| %>
            <% if category != last_category %>
              <span style="font-size:15px; margin:2px;">
                <%= link_to category.name, posts_search_category_path(category_id: category.id), class: "btn btn-sm btn-outline-primary" %>
              </span>
            <% end %>
            <% last_category = category %>
          <% end %>
        <% else %>
          <p>メモがありません。</p>
        <% end %>
      </div>


      <div class="mt-md-5">
        <h6><i class="fas fa-pen"></i>&nbsp;最近したためたメモ</h6>
        <% if @posts.exists? %>

          <% @posts.each do |post| %>
            <ul class="grid cs-style-1">
              <li>
                <figure>
                  <%= image_tag post.get_image(500,400) %>
                  <figcaption>
                    <h3><%= post.title %></h3>
                    <span>
                      <%= post.categories.map(&:name).join(', ') %><br>
                      ♥<%= post.favorites.count %>&emsp;<%= "#{post.comments.count} コメント" %>
                    </span>
                    <%= link_to "詳しく見る", post_path(post) %>
                  </figcaption>
                </figure>
              </li>
            </ul>
          <% end %>

        <% else %>
        	<p>メモが 0 枚です。</p>
        <% end %>
      </div>
    </div>


  </div>
</div>


<div class="bg_pattern Paper_v2"></div>