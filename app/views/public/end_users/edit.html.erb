<div class="container">
  <div class="row mt-md-5">

    <div class="col-md-3">
      <%= render "public/end_users/sidebar", end_user: @end_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="mb-md-5">
        <h4>プロフィール編集</h4>
      </div>

      <%= render "layouts/error_messages", model: @end_user %>

      <div class="card w-75 mx-auto shadow-lg mt-md-4">
        <div class="card-body" id="card_form">

        <%= form_with model: @end_user, url: end_users_information_path, local: true, method: :patch do |f| %>
          <div class="form-group">
            <i class="far fa-star"></i>
            <!--<i class="fas fa-star"></i>-->
            <%= f.label :nickname,"ニックネーム", class: "form" %>
            <%= f.text_field :nickname, class: "form-control form", autofocus: true, id: "end_user_name" %>
          </div>
          <div class="form-group">
            <i class="fas fa-image"></i>
            <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file form" %>
          </div>
          <div class="form-group">
            <i class="far fa-hand-peace"></i>
            <%= f.label :self_introduction,"自己紹介" , class: "form" %>
            <%= f.text_area :self_introduction, class: "form-control form", id: "end_user_introduction" %>
          </div>
          <div class="form-group" style="text-align:center;">
            <%= f.submit "保存", class: "btn btn-secondary form" %>
          </div>
        <% end %>

        </div>
      </div>

    </div>

  </div>
</div>







