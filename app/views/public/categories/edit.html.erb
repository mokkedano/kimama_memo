<div class="container">
  <div class="row mt-md-5">


    <div class="col-md-3">
      <%= render "public/end_users/sidebar", end_user: @end_user %>
    </div>


    <div class="col-md-6 offset-md-1">
      <div class="mb-md-5">
        <h4>カテゴリ編集</h4>
      </div>

      <%= render "layouts/error_messages", model: @category %>

      <%= form_with model: @category, url: category_path, method: :patch, local: true do |f| %>
        <div class="form-group">
          <i class="fas fa-tags"></i>&nbsp;
          <%= f.label :name, "カテゴリ名", class: "form" %>
          <%= f.text_field :name, class: "form-control form", placeholder: "20文字以内" %>
        </div>
        <div style="text-align:right;" class="form-group">
          <%= f.submit "変更", class: "btn btn-info form" %>
        </div>
      <% end %>
    </div>


  </div>
</div>
