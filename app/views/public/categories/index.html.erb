<div class="container">
  <div class="row mt-md-5">


    <div class="col-md-3">
      <%= render "public/end_users/sidebar", end_user: @end_user %>
    </div>


    <div class="col-md-6 offset-md-1">
      <div class="mb-md-5">
        <h4>カテゴリ一覧</h4>
      </div>

      <% if @categories.present?%>
        <% last_category = nil %>
        <table class="table table-bordered table-sm">
          <thead>
            <tr>
              <td>カテゴリ名</td>
              <th></th>
            </tr>
          </thead>
          <% @categories.each do |category| %>
            <% if category != last_category %>
            <tbody>
              <tr>
                <td valign="middle"><%= category.name %></td>
                <td align="middle">
                  <%= link_to edit_category_path(category), class: "btn-flat-simple" do %>
                    <i class="fa fa-caret-right"></i>&nbsp;編集
                  <% end %>
                </td>
              </tr>
            </tbody>
            <% end %>
            <% last_category = category %>
          <% end %>
        </table>
      <% else %>
        <p>登録されたカテゴリがありません。</p>
      <% end %>
    </div>


    <div class="col-md-2"></div>
  </div>
</div>







