<!DOCTYPE html>
<html>
  <head>
    <title>KimamaMemo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if admin_signed_in? %>
        <li>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        </li>
      <% elsif end_user_signed_in? %>
        <li>
          <%= link_to "マイページ", my_page_path %>
        </li>
        <li>
          <%= link_to "グループ", group_all_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %>
        </li>
        <li>
          <%= render "public/searches/search" %>
        </li>
      <% else %>
        <li>
          <%= link_to 'ゲストログイン（おためし用）', end_users_guest_sign_in_path, method: :post %>
        </li>
        <li>
          <%= link_to "新規登録", new_end_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_end_user_session_path %>
        </li>
      <% end %>
    </header>

    <main>
      <p><%= flash[:notice] %></p>
      <%= yield %>
    </main>


  </body>
</html>
